{
    "name": "react-collection-checklist",
    "module": "./dist/index.mjs",
    "type": "module",
    "version": "4.0.1",
    "description": "Simple component to create a checklist for collections.",
    "repository": "git@github.com/HerrTuring/react-collection-checklist.git",
    "author": "HerrTuring",
    "license": "MIT",
    "keywords": [
        "react",
        "image",
        "checklist"
    ],
    "scripts": {
        "start": "node ",
        "build": "rollup -c",
        "watch": "rollup -c -w",
        "lint": "eslint src --ext .ts,.tsx",
        "lint-fix": "eslint src --ext .ts,.tsx --fix",
        "generate-css-types": "tcm src && npm run lint-fix"
    },
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.mjs"
        },
        "./client": {
            "import": "./dist/client/index.mjs"
        }
    },
    "typesVersions": {
        "*": {
            "*": [
                "./dist/types/index.d.ts"
            ],
            "client": [
                "./dist/types/client.d.ts"
            ]
        }
    },
    "dependencies": {
        "style-inject": "^0.3.0"
    },
    "devDependencies": {
        "@rollup/plugin-json": "^6.0.1",
        "@rollup/plugin-node-resolve": "^15.1.0",
        "@rollup/plugin-typescript": "^11.1.5",
        "@types/node": "^20.5.2",
        "@types/react": "^18.2.33",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard-with-typescript": "^38.0.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-promise": "^6.1.1",
        "rollup": "^3.26.2",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-delete": "^2.0.0",
        "rollup-plugin-dts": "^6.1.0",
        "rollup-plugin-postcss": "^4.0.2",
        "typed-css-modules": "^0.8.0",
        "typescript": "^5.2.2"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react/jsx-runtime": "^18.2.0"
    },
    "funding": "https://www.buymeacoffee.com/herrturing"
}